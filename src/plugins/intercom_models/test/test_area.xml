<?xml version="1.0" encoding="ISO-8859-1"?>
<simulation version="1.0">
	<integrator type="Simple">
		<parameter name="numSteps" value="380"/>
		<sequence>
			<model name="calendar"/>
			<model name="weather"/>
			<model name="field"/>
		</sequence>
	</integrator>
	
	<model name="calendar" type="unisim::Calendar">
		<parameter name="latitude" value="52"/>
		<parameter name="firstDate" value="1/1/2007"/>
		<parameter name="followers" value="weather"/>
	</model>
	
	<model name="weather">
		<parameter name="Tmax" value="20"/>
		<parameter name="Tmin" value="10"/>
		<parameter name="Irradiation" value="12"/>
	</model>

	<model name="field" type="intercom::Community">
		<model name="cirsium" type="intercom::Plant">
		
			<model name="photoThermalTime" type="UniSim::PhotoThermalTime"/>
			
			<model name="height">
				<parameter name="height" value="1"/>
			</model>
			
			<model name="leafStemRatio" type="intercom::LeafStemRatio"/>

			<model name="leaves" type="intercom::Organ">
				<model name="area" type="intercom::Area">
					<model name="amax">
						<parameter name="amax" value="1"/>
					</model>
					<parameter name="kDiffuse" value="0.7" comment="Same as klv"/>
				</model>
			</model>
			
			<model name="stem" type="intercom::Organ">
				<model name="area" type="intercom::Area">
					<model name="amax">
						<parameter name="amax" value="1"/>
					</model>
					<parameter name="kDiffuse" value="0.3"/>
				</model>
			</model>
			
			<model name="flowers" type="intercom::Organ">
				<model name="amax">
					<parameter name="amax" value="1"/>
				</model>
			</model>
			
		</model>
	</model>

	<output type="table">
		<parameter name="fileName" value="PAR from Irradiation.prn"/>
		<variable label="Day" axis="x" value="calendar[dayInYear]"/>
    </output>
</simulation>
