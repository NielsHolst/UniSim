<?xml version="1.0" encoding="ISO-8859-1"?>
<simulation version="1.0">
	<integrator type="TimeStepLimited">
		<parameter name="maxSteps" value="365"/>
	</integrator>

	<model name="calendar" type="Calendar">
	</model>

	<model name="environment" type="UniSim::Records">
		<parameter name="fileName" value="environment.txt"/>
	</model>

	<model name="grassLandCut" type="AnimalStocking::GrassLand">
		<model name="productivity" type="AnimalStocking::GrassProductivityCuttingEstimate">
		</model>

		<model name="cowCapacity" type="AnimalStocking::StockingCapacity">
			<parameter name="requirement" value="20"/>
		</model>

		<model name="sheepCapacity" type="AnimalStocking::StockingCapacity">
			<parameter name="requirement" value="8"/>
		</model>
	</model>

	<model name="grassLandRem" type="AnimalStocking::GrassLand">
		<model name="productivity" type="AnimalStocking::GrassProductivityRemoteEstimate">
		</model>

		<model name="cowCapacity" type="AnimalStocking::StockingCapacity">
			<parameter name="requirement" value="20"/>
		</model>

		<model name="sheepCapacity" type="AnimalStocking::StockingCapacity">
			<parameter name="requirement" value="8"/>
		</model>
	</model>

	<output type="plot">
		<parameter name="title" value ="Environment"/>
		<variable axis="x" label="Day" value="calendar[totalTime]"/>
		<variable axis="y" label="Grass height" value="environment[GrassHeight]"/>
		<variable axis="y" label="PARabs" value="environment[ParAbs]"/>
		<variable axis="y" label="Digestibility" value="environment[Digestibility]"/>
	</output>
	<output type="plot">
		<parameter name="title" value ="Productivity"/>
		<variable axis="x" label="Day" value="calendar[totalTime]"/>
		<variable axis="y" label="PPC EMU" value="grassLandCut/productivity[energy]"/>
		<variable axis="y" label="PPS EMU" value="grassLandRem/productivity[energy]"/>
		<variable axis="y" label="PPC DM" value="grassLandCut/productivity[dryMatter]"/>
		<variable axis="y" label="PPS DM" value="grassLandRem/productivity[dryMatter]"/>
	</output>
	<output type="plot">
		<parameter name="title" value ="Capacity for cows"/>
		<variable axis="x" label="Day" value="calendar[totalTime]"/>
		<variable axis="y" label="PPC cows" value="grassLandCut/cowCapacity[value]"/>
		<variable axis="y" label="PPS cows" value="grassLandRem/cowCapacity[value]"/>
	</output>
	<output type="plot">
		<parameter name="title" value ="Capacity for sheep"/>
		<variable axis="x" label="Day" value="calendar[totalTime]"/>
		<variable axis="y" label="PPC sheep" value="grassLandCut/sheepCapacity[value]"/>
		<variable axis="y" label="PPS sheep" value="grassLandRem/sheepCapacity[value]"/>
	</output>
</simulation>
