<?xml version="1.0" encoding="ISO-8859-1"?>
<simulation version="1.0">
    <integrator type="TimeStepLimited">
        <parameter name="maxSteps" value="500"/>
        <sequence>
            <model name="calendar"/>
            <model name="generators"/>
            <model name="weather"/>
        </sequence>
    </integrator>
	
	<model name="calendar" type="Calendar">
		<parameter name="firstDate" value="1/1/2010"/>
	</model>
	
	<model name="weather" type="Conductance::Weather">
		<!--
		<parameter name="irradiation" value="20"/>
		-->
		<parameter name="irradiation" variable="normal[value]"/>
	</model>
	
	<model name="generators">
		<model name="uniform" type="UniSim::RandomUniform">
			<parameter name="minValue" value="20"/>
			<parameter name="maxValue" value="40"/>
		</model>
		<model name="Poisson" type="UniSim::RandomPoisson">
			<parameter name="minValue" value="0"/>
			<parameter name="maxValue" value="100"/>
			<parameter name="mean" value="10"/>
		</model>
		<model name="normal" type="UniSim::RandomNormal">
			<parameter name="minValue" value="0"/>
			<parameter name="maxValue" value="100"/>
			<parameter name="mean" value="50"/>
			<parameter name="sd" value="10"/>
		</model>
		<model name="lognormal" type="UniSim::RandomLognormal">
			<parameter name="minValue" value="0"/>
			<parameter name="maxValue" value="100"/>
			<parameter name="mean" value="50"/>
			<parameter name="sd" value="10"/>
		</model>
	</model>

	<output type="table">
		<parameter name="filename" value ="random_output.prn"/>
		<variable axis="x" label="Day" value="calendar[dayInYear]"/>
		<variable axis="y" label="uniform" value="uniform[value]"/>
		<variable axis="y" label="poisson" value="poisson[value]"/>
		<variable axis="y" label="normal" value="normal[value]"/>
		<variable axis="y" label="lognormal" value="lognormal[value]"/>
	</output>
	<output type="plot">
		<parameter name="title" value ="Uniform"/>
		<variable axis="x" label="Day" value="calendar[daysTotal]"/>
		<variable axis="y" label="uniform" value="uniform[value]"/>
		<variable axis="y" label="poisson" value="poisson[value]"/>
		<variable axis="y" label="normal" value="normal[value]"/>
		<variable axis="y" label="lognormal" value="lognormal[value]"/>
	</output>
	<output type="plot">
		<parameter name="title" value ="Irradiation"/>
		<variable axis="x" label="Day" value="calendar[daysTotal]"/>
		<variable axis="y" label="uniform" value="weather[irradiation]"/>
	</output>
</simulation>
