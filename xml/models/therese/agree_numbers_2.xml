<?xml version="1.0" encoding="ISO-8859-1" ?>

<simulation version = "1.0">
	<integrator type="TimeStepLimited">
		<parameter name="maxSteps" value ="60"/>
		<sequence>
				<model name="calendar"/>
				<model name= "weather"/>
				<model name= "elymus"/>
		</sequence>
		<model name="RunIterator" type="UniSim::RunIteratorFixed">
			<parameter name="numIterations" value="15"/>
		</model>
	</integrator>

	<model name ="calendar" type="UniSim::Calendar">
		<parameter name= "initialDate" value = "1/8/1953"/>
		<parameter name= "latitude" value = "52"/>
	</model>
	
	<model name ="weather" type="UniSim::Weather">
		<model name ="records" type= "UniSim::Records">
			<parameter name= "filename" value = "denmark-odum-1953-2009.txt"/>
			<parameter name= "imposeInitialDateTime" value ="no"/>			
		</model>
	</model>
		
	<model name= "elymus">
		<model name= "leafnumbers" type="elymus::LeafNumbers">
			<parameter name= "Phyllochron" value = "100"/>
			<parameter name= "LeafNumbersInit" value = "1"/>
		</model>

		<model name ="dayDegrees" type="UniSim::PhotoThermalTime">
			<parameter name= "T0" value = "5"/>
		</model>
	</model>
	
	
<!-- Output Plots Abiotic Factors-->	
	<output type="plot">
		<parameter name="title" value= "Air temperature"/>
		<variable axis = "x" label = "Day" value="calendar[dayofYear]"/>
		<variable axis = "y" label = "Tavg" value="weather/records[Tavg]"/>
		<variable axis = "y" label = "Tmin" value="weather/records[Tmin]"/>
		<variable axis = "y" label = "Tmax" value="weather/records[Tmax]"/>
	</output>
	<!--output type="plot">
		<parameter name="title" value= "Irradiation"/>
		<variable axis = "x" label = "Day" value="calendar[dayOfYear]"/>
		<variable axis = "y" label = "Irradiation (W/m²)" value="weather/records2[irradiation]"/>
	</output-->
	<!--output type="plot">
		<parameter name="title" value= "Daylength"/>
		<variable axis = "x" label = "Day" value="calendar[dayOfYear]"/>
		<variable axis = "y" label = "Daylength (UniSim::Calendar)" value = "calendar[dayLength]"/>
	</output-->
	<output type="plot">
		<parameter name="title" value= "Day degrees"/>
		<variable axis = "x" label = "Day" value="calendar[dayOfYear]"/>
		<variable axis = "y" label = "Day-degrees, T0=5ºC" value = "elymus/dayDegrees[total]"/>
	</output>

<!-- Output E.repens -->

	<output type="plot">
		<parameter name="title" value= "Elymus repens leaf numbers per shoot"/>
		<variable axis = "x" label = "Day" value="calendar[dayOfYear]"/>
		<variable axis = "y" label = "Climate 5 -sim" value = "elymus/leafNumbers[Numbers_5]"/>
		

		<!--data axis = "x" label = "Day" value= "elymus/observations_leafArea_2004[dayOfYear]"/>
		<data axis = "y" label = "Climate 5 -obs" value= "elymus/observations_leafArea_2004[leafArea_5]"/-->
		
	</output>
	
	<!-- Output Tables Abiotic Factors-->
	<!--output type="table">
	<parameter name="filename" value= "DD, T0=5ºC, since 0209"/>
	<variable axis = "x" label = "Day" value="calendar[dayofYear]"/>
	<variable axis = "y" label = "DD, T0=3ºC" value="elymus/dayDegrees[total]"/>
	</output-->

</simulation>
